!!! 5
%html
  %head
    %title {Title}
    %link{ :rel => "shortcut icon", :href => "{Favicon}" }
    %link{ :rel => "alternate", :type => "application/rss+xml", :href => "{RSS}" }
    %link{ :rel => "stylesheet", :href => "style.css" }
    %script{:type => "text/javascript", :src  => "http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"}
    \{block:Description}
    <meta name="description" content="{MetaDescription}" />
    \{/block:Description}
    :javascript
      $(document).ready(function(){

        var photoSetTemplate = ' \
          <article class="post photoset"> \
            <div class="slider nivoSlider"> \
              <a class="fancybox nivo-imageLink" href="#" style="display: block;"> \
                <img alt="" data-thumb="http://lorempixel.com/500/300" src="http://lorempixel.com/500/300" style="display: none;"> \
              </a> \
              <a class="fancybox nivo-imageLink" href="#" style="display: block;"> \
                <img alt="" data-thumb="http://lorempixel.com/500/300" src="http://lorempixel.com/500/300" style="display: none;"> \
              </a> \
              <a class="fancybox nivo-imageLink" href="#" style="display: block;"> \
                <img alt="" data-thumb="http://lorempixel.com/500/300" src="http://lorempixel.com/500/300" style="display: none;"> \
              </a> \
              <a class="fancybox nivo-imageLink" href="#" style="display: block;"> \
                <img alt="" data-thumb="http://lorempixel.com/500/300" src="http://lorempixel.com/500/300" style="display: none;"> \
              </a> \
              <img class="nivo-main-image" src="http://lorempixel.com/500/300" style="display: inline; width: 713px; height: auto;"> \
              <div class="nivo-caption"></div> \
              <div class="nivo-directionNav"> \
                <a class="nivo-prevNav">&lt;</a> \
                <a class="nivo-nextNav">&gt;</a> \
              </div> \
            </div> \
            <div class="caption"> \
              <p> \
                <span>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod</span> \
                tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, \
                quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo \
                consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse \
                cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non \
                proident, sunt in culpa qui officia deserunt mollit anim id est laborum. \
              </p> \
            </div> \
          </article>';
        var html = $('body').html();
        html = html.replace(/{block:\w*}/g, "")
        html = html.replace(/{PhotoURL\-\w*}/g, "http://lorempixel.com/500/300")
        html = html.replace(/{Photoset\-\w*}/g, photoSetTemplate)
        $('body').html(html.replace(/{\/block:\w*}/g, ""));
      });
  %body
    %h1 {Title}

    \{block:Description}
    %p#description {Description}
    \{/block:Description}

    %ol#posts
      \{block:Posts}

      \{block:Text}
      %li.post-text
        \{block:Title}
        %h3
          %a{ :href => "{Permalink}" } {Title}
        \{/block:Title}
        {Body}
      \{/block:Text}

      \{block:Photo}
      %li.post-photo
        %img(src="{PhotoURL-500}" alt="{PhotoAlt}")
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Photo}

      \{block:Photoset}
      %li.post-photoset
        {Photoset-500}
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Photoset}

      \{block:Quote}
      %li.post-quote
        "{Quote}"
        \{block:Source}
        %div.source {Source}
        \{/block:Source}
      \{/block:Quote}

      \{block:Link}
      %li.post-link
        %a.link{ :href => "{URL}", :target => "{Target}" } {Name}
        \{block:Description}
        %div.description {Description}
        \{/block:Description}
      \{/block:Link}

      \{block:Chat}
      %li.post-chat
        \{block:Title}
        %h3
          %a.link{ :href => "{Permalink}" } {Title}
        \{/block:Title}
        %ul.chat
        \{block:Lines}
        %li{ :class => "{Alt} user_{UserNumber}" }
        \{block:Label}
        %span.label {Label}
        \{/block:Label}
        {Line}
        \{/block:Lines}
      \{/block:Chat}

      \{block:Video}
      %li.post-video
        {Video-500}
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Video}

      \{block:Audio}
      %li.post-audio
        {AudioPlayerBlack}
        \{block:Caption}
        %div.caption {Caption}
        \{/block:Caption}
      \{/block:Audio}

      \{\block:Posts}

      %p#footer

        \{block:PreviousPage}
        %a.link{ :href => "{PreviousPage}"} &#171; Previous
        \{/block:PreviousPage}

        \{block:NextPage}
        %a.link{ :href => "{NextPage}"} Next &#187;
        \{/block:NextPage}

        %a.link{ :href => "/archive"} Archive